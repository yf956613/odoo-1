<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_lu_faia_view_form" model="ir.ui.view">
        <field name="name">account.lu.faia.form.view</field>
        <field name="model">account.lu.faia</field>
        <field name="arch" type="xml">
            <form string="FAIA File Generation">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button string="Generate" name="generate_faia_report"
                        type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default"
                        special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="account_lu_faia_action" model="ir.actions.act_window">
        <field name="name">FAIA</field>
        <field name="res_model">account.lu.faia</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="account_lu_faia_menu"
            parent="l10n_lu.account_reports_lu_statements_menu"
            action="account_lu_faia_action"
            sequence="99"/>

</odoo>
