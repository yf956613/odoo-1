<?xml version="1.0" encoding="utf-8"?>
<templates>

<!--===============-->
<!-- Media Buttons -->
<!--===============-->

<we3-group t-name="we3.buttons.media">
    <we3-button name="image-dialog" data-method="addMedia" title="Picture">
        <i class="fa fa-file-image-o"></i>
    </we3-button>
    <we3-button name="image-remove" data-method="removeMedia" title="Remove Media">
        <i class="fa fa-trash"></i>
    </we3-button>
</we3-group>

<we3-group t-name="we3.buttons.size">
    <we3-button name="size-auto" data-method="update" data-value="auto">Auto</we3-button>
    <we3-button name="size-100" data-method="update" data-value="100%" title="Resize Full">100%</we3-button>
    <we3-button name="size-50" data-method="update" data-value="50%" title="Resize Half">50%</we3-button>
    <we3-button name="size-25" data-method="update" data-value="25%" title="Resize Quarter">25%</we3-button>
</we3-group>

<we3-dropdown t-name="we3.buttons.padding">
    <we3-toggler title="Padding">
        <i class="fa fa-plus-square-o"></i>
    </we3-toggler>
    <we3-vertical-items>
        <we3-button name="padding-none" data-method="update" data-value="">None</we3-button>
        <we3-button name="padding-small" data-method="update" data-value="padding-small">Small</we3-button>
        <we3-button name="padding-medium" data-method="update" data-value="padding-medium">Medium</we3-button>
        <we3-button name="padding-large" data-method="update" data-value="padding-large">Large</we3-button>
        <we3-button name="padding-xl" data-method="update" data-value="padding-xl">Xl</we3-button>
    </we3-vertical-items>
</we3-dropdown>

<we3-group t-name="we3.buttons.align">
    <we3-button name="align-left" data-method="update" data-value="left" title="Float Left">
        <i class="fa fa-align-left"></i>
    </we3-button>
    <we3-button name="align-center" data-method="update" data-value="center" title="Align Center">
        <i class="fa fa-align-center"></i>
    </we3-button>
    <we3-button name="align-right" data-method="update" data-value="right" title="Float Right">
        <i class="fa fa-align-right"></i>
    </we3-button>
    <we3-button name="align-none" data-method="update" data-value="none" title="Normal">
        <i class="fa fa-align-justify"></i>
    </we3-button>
</we3-group>

<we3-group t-name="we3.buttons.image">
    <we3-button name="rounded" data-method="toggleClass" data-value="rounded" title="Shape: Rounded">
        <i class="fa fa-square"></i>
    </we3-button>
    <we3-button name="rounded-circle" data-method="toggleClass" data-value="rounded-circle" title="Shape: Circle">
        <i class="fa fa-circle-o"></i>
    </we3-button>
    <we3-button name="shadow" data-method="toggleClass" data-value="shadow" title="Shape: Shadow">
        <i class="fa fa-sun-o"></i>
    </we3-button>
    <we3-button name="img-thumbnail" data-method="toggleClass" data-value="img-thumbnail" title="Shape: Thumbnail">
        <i class="fa fa-picture-o"></i>
    </we3-button>
</we3-group>

<we3-group t-name="we3.buttons.image.crop">
    <we3-button name="crop" data-method="crop" title="Crop image">
        <i class="fa fa-crop"></i>
    </we3-button>
</we3-group>

<we3-group t-name="we3.buttons.image.alt">
    <we3-button data-method="alt" data-value="img-thumbnail">
        <b>Description:</b>
    </we3-button>
</we3-group>

<we3-group t-name="we3.buttons.pictogram">
    <we3-button name="spin" data-method="toggleClass" data-value="fa-spin" title="Spin">
        <i class="fa fa-refresh"></i>
    </we3-button>
</we3-group>

<!--=============-->
<!-- Media Modal -->
<!--=============-->

<!-- Media Dialog (allows to choose an img/pictogram/video) -->
<we3-group t-name="we3.modal.media">
    <we3-tablist role="tablist">
        <!-- <we3-button role="tab"></we3-button> -->
    </we3-tablist>
    <we3-tabpanels>
        <!-- <we3-tabpanel role="tabpanel"></we3-tabpanel> -->
    </we3-tabpanels>
</we3-group>

<we3-group name="url" t-name="we3.modal.media.image">
    <input type="text" name="url" data-method="_onURLInputChange"/>
    <we3-button data-method="_onURLButtonClick" disabled="disabled">
        Add image
        <span class="we3-color-success fa fa-lg fa-check" title="The URL seems valid"></span>
        <span class="we3-color-error fa fa-lg fa-times" title="The URL does not seem to work"></span>
    </we3-button>
</we3-group>

<we3-group t-name="we3.modal.media.document">
    <input type="text" name="url" data-method="_onURLInputChange"/>
    <we3-button data-method="_onURLButtonClick" disabled="disabled">
        Add document
        <span class="we3-color-success fa fa-lg fa-check" title="The URL seems valid"></span>
        <span class="we3-color-error fa fa-lg fa-times" title="The URL does not seem to work"></span>
    </we3-button>
</we3-group>

<we3-group class="we3-video" t-name="we3.modal.media.video">
    <form action="#" class="row">
        <we3-group class="col mt-4 o_video_dialog_form">
            <we3-group class="form-group mb-2" id="o_video_form_group">
                <label class="col-form-label" for="o_video_text">
                    Video code <small>(URL or Embed)</small>
                </label>
                <textarea class="form-control" id="o_video_text" placeholder="Copy-paste your URL or embed code here" />
            </we3-group>
            <div class="text-right">
                <small class="text-muted">Accepts <b><i>Youtube</i></b>, <b><i>Instagram</i></b>, <b><i>Vine.co</i></b>, <b><i>Vimeo</i></b>, <b><i>Dailymotion</i></b> and <b><i>Youku</i></b> videos</small>
            </div>
            <div class="o_video_dialog_options mt-4">
            </div>
        </we3-group>
        <div class="col-md-6">
            <div id="video-preview" class="p-3">
                <div class="o_video_dialog_preview_text small mb-2 d-none">Preview</div>
                <div class="media_iframe_video">
                    <div class="media_iframe_video_size"/>
                    <iframe class="o_video_dialog_iframe" allowfullscreen="allowfullscreen" frameborder="0" src=""/>
                </div>
            </div>
        </div>
    </form>
</we3-group>

<we3-group class="we3-pictogram" t-name="we3.modal.media.pictogram">
    <we3-buttons>
        <we3-group name="search">
            <input data-method="_onSearch" type="text" name="search" placeholder="Search a pictogram"/>
            <we3-button><i class="fa fa-search" title="Search" aria-label="Search"/></we3-button>
        </we3-group>
    </we3-buttons>
    <we3-group>
        <we3-documents data-method="_onSelectDocument"/>
    </we3-group>
</we3-group>

<!--=================-->
<!-- Edition Dialogs -->
<!--=================-->

<!-- Alt Dialog (allows to change alt and title of page images) -->
<we3-group t-name="we3.modal.media.alt">
    <we3-group>
        <label for="alt" title="'Alt tag' specifies an alternate text for an image, if the image cannot be displayed (slow connection, missing image, screen reader ...).">
           Description <small>(ALT Tag)</small>
        </label>
        <input class="form-control" id="alt" required="required" t-att-value="archNode.attributes.alt" type="text"/>
    </we3-group>
    <we3-group>
        <label for="title" title="'Title tag' is shown as a tooltip when you hover the picture.">
           Tooltip  <small>(TITLE Tag)</small>
        </label>
        <input class="form-control" id="title" required="required" t-att-value="archNode.attributes.title" type="text"/>
    </we3-group>
</we3-group>

<!-- Video choosing part of the Media Dialog -->
<t t-name="wysiwyg.widgets.video">
    <form action="#" class="row">
        <div class="col mt-4 o_video_dialog_form">
            <div class="form-group mb-2" id="o_video_form_group">
                <label class="col-form-label" for="o_video_text">
                    Video code <small>(URL or Embed)</small>
                </label>
                <textarea class="form-control" id="o_video_text" placeholder="Copy-paste your URL or embed code here"/>
            </div>
            <div class="text-right">
                <small class="text-muted">Accepts <b><i>Youtube</i></b>, <b><i>Instagram</i></b>, <b><i>Vine.co</i></b>, <b><i>Vimeo</i></b>, <b><i>Dailymotion</i></b> and <b><i>Youku</i></b> videos</small>
            </div>
            <div class="o_video_dialog_options d-none mt-4">
                <div class="o_yt_option o_vim_option o_dm_option">
                    <label class="o_switch mb0"><input id="o_video_autoplay" type="checkbox"/><span/>Autoplay</label>
                </div>
                <div class="o_yt_option o_vim_option">
                    <label class="o_switch mb0"><input id="o_video_loop" type="checkbox"/><span/>Loop</label>
                </div>
                <div class="o_yt_option o_dm_option">
                    <label class="o_switch mb0"><input id="o_video_hide_controls" type="checkbox"/><span/>Hide player controls</label>
                </div>
                <div class="o_yt_option">
                    <label class="o_switch mb0"><input id="o_video_hide_fullscreen" type="checkbox"/><span/>Hide fullscreen button</label>
                </div>
                <div class="o_yt_option">
                    <label class="o_switch mb0"><input id="o_video_hide_yt_logo" type="checkbox"/><span/>Hide Youtube logo</label>
                </div>
                <div class="o_dm_option">
                    <label class="o_switch mb0"><input id="o_video_hide_dm_logo" type="checkbox"/><span/>Hide Dailymotion logo</label>
                </div>
                <div class="o_dm_option">
                    <label class="o_switch mb0"><input id="o_video_hide_dm_share" type="checkbox"/><span/>Hide sharing button</label>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div id="video-preview" class="p-3">
                <div class="o_video_dialog_preview_text small mb-2 d-none">Preview</div>
                <div class="media_iframe_video">
                    <div class="media_iframe_video_size"/>
                    <iframe class="o_video_dialog_iframe" allowfullscreen="allowfullscreen" frameborder="0" src=""/>
                </div>
            </div>
        </div>
    </form>
</t>


<!-- Link Dialog (allows to choose a style and content for a link on the page) -->
<div t-name="wysiwyg.widgets.link" class="o_link_dialog">
    <div class="row">
        <form class="col-lg-8">
            <div t-attf-class="form-group row#{widget.needLabel ? '' : ' d-none'}">
                <label class="col-form-label col-md-3" for="o_link_dialog_label_input">Link Label</label>
                <div class="col-md-9">
                    <input type="text" name="label" class="form-control" id="o_link_dialog_label_input" required="required" t-att-value="widget.data.text"/>
                </div>
            </div>
            <div class="form-group row o_url_input">
                <label class="col-form-label col-md-3" for="o_link_dialog_url_input">URL or Email</label>
                <div class="col-md-9">
                    <input type="text" name="url" class="form-control" id="o_link_dialog_url_input" required="required"/>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-md-3">Size</label>
                <div class="col-md-9">
                    <select name="link_style_size" class="form-control link-style">
                        <option value="sm">Small</option>
                        <option value="" selected="selected">Medium</option>
                        <option value="lg">Large</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-md-3">Style</label>
                <div class="col-md-9">
                    <select name="link_style_shape" class="form-control link-style">
                        <option value="" selected="selected">Default</option>
                        <option value="outline">Outline</option>
                        <option value="rounded-circle">Rounded</option>
                        <option value="outline,rounded-circle">Outline-Rounded</option>
                        <option value="flat">Flat</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-md-3">Color</label>
                <div class="col-md-9">
                    <div class="o_link_dialog_color">
                        <label role="button" t-attf-class="o_link_dialog_color_item o_btn_preview btn btn-link text-center" data-color="">
                            <span>L</span>
                            <input class="d-none link-style" name="link_style_color" type="radio" value=""/>
                            <i class="fa"/>
                        </label>
                        <t t-foreach="['alpha', 'beta', 'gamma', 'delta', 'epsilon', 'primary', 'secondary', 'success', 'info', 'warning', 'danger']" t-as="color">
                            <label role="button" t-attf-class="o_link_dialog_color_item o_btn_preview btn btn-#{color}" t-attf-aria-label="Color for #{color}" t-attf-title="Color for #{color}">
                                <input type="radio" name="link_style_color" class="d-none link-style" t-att-value="color"/>
                                <i class="fa"/>
                            </label>
                        </t>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-md-3 col-md-9">
                    <label class="o_switch">
                        <input type="checkbox" name="is_new_window" t-att-checked="widget.data.isNewWindow ? 'checked' : undefined"/>
                        <span/>
                        Open new window
                    </label>
                </div>
            </div>
        </form>
        <div class="col-lg-4 o_link_dialog_preview">
            <div class="form-group text-center">
                <label>Preview</label>
                <div style="overflow-x: auto; max-width: 100%; max-height: 200px;">
                    <a href="#" id="link-preview" aria-label="Preview" title="Preview"/>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Crop Image Dialog (allows to crop image on the page) -->
<div t-name="wysiwyg.widgets.crop_image" class="o_crop_image_dialog">
    <div t-if="widget.imageData.isExternalImage" class="alert alert-warning text-center" role="alert">
        <i class="fa fa-exclamation-triangle fa-2x"/>
        <h4>This image is an external image</h4>
        <p>
            This type of image is not supported for cropping.<br/>
            If you want to crop it, please first download it from the original source and upload it Odoo.
        </p>
    </div>
    <t t-else="">
       <div class="o_crop_area">
            <img class="img img-fluid o_cropper_image" t-att-src="widget.imageData.originalSrc"/>
       </div>
       <div class="o_crop_options text-center mt16">
           <div class="btn-group btn-group-toggle" title="Aspect Ratio" data-toggle="buttons">
               <t t-foreach="widget.aspectRatioList" t-as="ratio">
                   <t t-set="is_active" t-value="ratio[1] === widget.imageData.aspectRatio"/>
                   <label t-attf-class="btn btn-secondary#{is_active and ' active' or ''}" data-event="ratio" t-att-data-label="ratio[1]" t-att-data-value="ratio[2]">
                       <input type="radio" /><t t-esc="ratio[0]"/>
                   </label>
               </t>
           </div>
           <div class="btn-group" role="group">
               <button class="btn btn-secondary" title="Zoom In" data-event="zoom" data-value="0.1"><i class="fa fa-search-plus"/></button>
               <button class="btn btn-secondary" title="Zoom Out" data-event="zoom" data-value="-0.1"><i class="fa fa-search-minus"/></button>
           </div>
           <div class="btn-group" role="group">
               <button class="btn btn-secondary" title="Rotate Left" data-event="rotate" data-value="-45"><i class="fa fa-rotate-left"/></button>
               <button class="btn btn-secondary" title="Rotate Right" data-event="rotate" data-value="45"><i class="fa fa-rotate-right"/></button>
           </div>
           <div class="btn-group" role="group">
               <button class="btn btn-secondary" title="Flip Horizontal" data-event="flip" data-value="horizontal" data-x="1"><i class="fa fa-arrows-h"/></button>
               <button class="btn btn-secondary" title="Flip Vertical" data-event="flip" data-value="vertical" data-y="1"><i class="fa fa-arrows-v"/></button>
           </div>
           <div class="btn-group" role="group">
               <button class="btn btn-secondary" title="Reset Image" data-event="reset"><i class="fa fa-refresh"/> Reset Image</button>
           </div>
       </div>
   </t>
</div>

</templates>
