<?xml version="1.0"?>
<openerp>
    <data>
    	<record id="merge_picking_label" model="ir.ui.view">
            <field name="model">openerp.delivery.merge_picking_label</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="nb_labels"/>
                        <field name="all_labels" filename="all_labels_fname"/>
                        <field name="all_labels_fname" invisible="1"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="merge_picking_label_act">
            <field name="name">Merge and Print Labels</field>
            <field name="res_model">openerp.delivery.merge_picking_label</field>
            <field name="binding_model_id" ref="stock.model_stock_picking"/>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</openerp>
