<?xml version="1.0" encoding="UTF-8"?>
<template>
    <t t-name="website.slide.upload.modal.certification">
        <div>
            <form class="clearfix">
                <div id="warning-no-certif" class="o_hidden" style="color: red;text-align: right;">
                    There is no certification available, please contact your administrator.
                </div>
                <div class="form-group row">
                    <label for="certification_id" class="col-form-label col-md-3">Certification</label>
                    <div class="controls col-md-9">
                        <input class="form-control" id="certification_id" required="required"/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <div class="img-thumbnail img-hover" id="slide-border">
                            <img src="/website_slides/static/src/img/document.png" id="slide-image" title="Content Preview" alt="Content Preview" class="img-fluid mb8"/>
                            <input id="slide-upload" name="slide-file" class="form-control-file d-none" accept="image/*" type="file" required="required" data-prevent-onchange="1"/>
                            <div class="o_wss_icon_controls">
                                <button class="fa fa-trash-o fa-lg float-right o_wss_trash_icon_slide" title="Clear" aria-label="Clear"/>
                                <button class="fa fa-pencil fa-lg float-right o_select_file_button o_upload_image_certification_slide" title="Edit" aria-label="Edit"/>
                            </div>
                        </div>
                </div>
                <div class="col-md-8">
                        <t t-call="website.slide.upload.modal.common"/>
                    </div>
                </div>

                
                <div class="o_web_slide_survey_badge form-group row d-none">
                    <label for="certification_give_badge" class="col-form-label col-md-3">Give badge</label>
                    <div class="controls col-md-9 mt8">
                        <input id="certification_give_badge" name="certification_give_badge" type="checkbox" checked="checked"/>
                    </div>
                </div>
                <div class="checked o_web_slide_survey_badge form-group row d-none">
                    <label for="name" class="col-form-label col-md-3">Certification Badge</label>
                    <div class="col-md-9">
                        <input id="certification_badge_id_readonly" name="certification_badge_id_readonly" class="form-control" readonly="True" style="pointer-events: none;"/>
                    </div>
                </div>
                <canvas id="data_canvas" class="d-none"></canvas>
            </form>
        </div>
    </t>
</template>
